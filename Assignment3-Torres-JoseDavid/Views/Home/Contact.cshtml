@model Assignment3_Torres_JoseDavid.Models.ContactModel

@{
    ViewData["Title"] = "Contact Us";
}

<head>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js" integrity="sha256-/xUj+3OJU5yExlq6GSYGSHk7tPXikynS7ogEvDej/m4=" crossorigin="anonymous"></script>
    <script src="https://www.google.com/recaptcha/api.js" async defer></script>
</head>

<h1>@ViewBag.Header</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Contact" id="demo-form">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="FirstName" class="control-label"></label>
                <input asp-for="FirstName" class="form-control" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LastName" class="control-label"></label>
                <input asp-for="LastName" class="form-control" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PostalCode" class="control-label"></label>
                <input asp-for="PostalCode" class="form-control" />
                <span asp-validation-for="PostalCode" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Topic" class="control-label"></label>
                <select asp-for="Topic" asp-items="@ViewBag.SampleTopics" class="form-control">
                    <option hidden disabled selected>Select Topic</option>
                </select>

                <span asp-validation-for="Topic" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Phone" class="control-label"></label>
                <input asp-for="Phone" class="form-control" />
                <span asp-validation-for="Phone" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <label asp-for="Comments" class="control-label">Question or Comment</label>
                <textarea asp-for="Comments" class="form-control"></textarea>
                <span asp-validation-for="Comments" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" id="submit_button" value="Submit" class="btn btn-primary" />
                <input type="reset" value="Reset" class="btn btn-primary"/>
            </div>

            <div class="g-recaptcha" data-sitekey="@ViewBag.ReCaptchaSiteKey"></div>

        </form>

        <script type="text/javascript">
            $(document).ready(function () {
                $(document).on('click', '#submit_button', function () {
                    // Check if the reCAPTCHA checkbox is checked
                    if (!grecaptcha.getResponse()) {
                        alert("Please complete the reCAPTCHA.");
                        return;
                    }

                    // Continue with form submission
                    $.ajax({
                        url: "/contact",
                        method: "POST",
                        headers: {
                            'Content-Type': 'application/json',
                        },
                        data: JSON.stringify({ reCaptchaToken: grecaptcha.getResponse() }),
                        success: function (result, status, xhr) {
                            $("#generatedToken").html("Token Result: " + status + " " + result);
                        },
                        error: function (xhr, status, error) {
                            $("#generatedToken").html("Token Result: " + status + " " + error + " " +
                                xhr.status + " " + xhr.statusText);
                        }
                    });
                });
            });
        </script>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
